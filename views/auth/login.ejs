<h1 class="mb-4">Iniciar Sesi칩n</h1>

<form action="/auth/login" method="POST" class="needs-validation" novalidate>
  <div class="mb-3">
    <label for="username" class="form-label">Nombre de usuario</label>
    <input type="text" name="username" id="username" class="form-control" required>
    <div class="invalid-feedback">Por favor ingresa tu usuario.</div>
  </div>

  <div class="mb-3">
    <label for="password" class="form-label">Contrase침a</label>
    <input type="password" name="password" id="password" class="form-control" required>
    <div class="invalid-feedback">Por favor ingresa tu contrase침a.</div>
  </div>

  <button type="submit" class="btn btn-success">Entrar</button>
</form>

<script>
// Validaci칩n de Bootstrap
(() => {
  'use strict';
  const forms = document.querySelectorAll('.needs-validation');
  Array.from(forms).forEach(f => {
    f.addEventListener('submit', event => {
      if (!f.checkValidity()) {
        event.preventDefault();
        event.stopPropagation();
      }
      f.classList.add('was-validated');
    });
  });
})();
</script>
