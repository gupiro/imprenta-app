<%- include('partials/header') %>

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Pedidos Dise침ados</title>
  <link rel="stylesheet" href="/css/estilos.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .pedido-card {
      background: #f9f9f9;
      border: 1px solid #ddd;
      border-radius: 10px;
      padding: 15px;
      margin: 15px 0;
      box-shadow: 0px 2px 8px rgba(0,0,0,0.1);
      transition: transform 0.2s;
    }
    .pedido-card:hover {
      transform: scale(1.02);
    }
    .pedido-img-container {
      position: relative;
    }
    .pedido-img-container img {
      width: 100%;
      max-height: 250px;
      object-fit: contain;
    }
    .marca-agua-logo {
      position: absolute;
      top: 50%;
      left: 50%;
      width: 120px;
      opacity: 0.25;
      transform: translate(-50%, -50%);
      pointer-events: none;
      user-select: none;
    }
  </style>
</head>

<body class="container py-5">

<h1 class="mb-4 text-center">游꿛 Pedidos Dise침ados</h1>

<% if (pedidos.length > 0) { %>
  <div class="row">
    <% pedidos.forEach(pedido => { %>
      <div class="col-md-4">
        <div class="pedido-card">
          
          <div class="pedido-img-container">
            <% if (pedido.imagen) { %>
              <img src="/uploads/<%= pedido.imagen %>" alt="Imagen Pedido">
              <img src="/uploads/tu_logo.png" alt="Marca de Agua" class="marca-agua-logo">
            <% } else { %>
              <img src="/uploads/default.png" alt="Sin Imagen">
            <% } %>
          </div>

          <% if (pedido.imagen) { %>
            <a href="/uploads/<%= pedido.imagen %>" download class="btn btn-outline-success mt-2 w-100">拘勇 Descargar Boceto</a>
          <% } %>

          <% if (pedido.archivo_final) { %>
            <a href="/uploads/<%= pedido.archivo_final %>" download class="btn btn-outline-primary mt-2 w-100">拘勇 Descargar Dise침o Final</a>
          <% } %>

          <h5 class="mt-3"><strong>Cliente:</strong> <%= pedido.cliente_nombre %></h5>
          <p><strong>Descripci칩n:</strong> <%= pedido.descripcion %></p>
          <p><strong>Precio:</strong> $<%= pedido.precio ? Math.round(pedido.precio) : 0 %></p>
          <p><strong>Fecha:</strong> <%= pedido.fecha %></p>

          <div class="d-grid gap-2 mt-2">
            <form action="/pedidos/<%= pedido.id %>/cambiar-estado" method="POST">
              <select name="estado" class="form-select mb-2" required>
                <option value="" disabled selected>Cambiar estado</option>
                <option value="LISTO PARA IMPRIMIR">Listo para Imprimir</option>
              </select>
              <button type="submit" class="btn btn-success">Actualizar Estado</button>
            </form>

            <form action="/pedidos/<%= pedido.id %>/subir-final" method="POST" enctype="multipart/form-data">
              <label class="form-label mt-2">Subir Dise침o Final:</label>
              <input type="file" name="archivo_final" class="form-control mb-2" required>
              <button type="submit" class="btn btn-primary">游닋 Subir Dise침o Final</button>
            </form>
          </div>

        </div>
      </div>
    <% }) %>
  </div>
<% } else { %>
  <div class="alert alert-info text-center">
    No hay pedidos dise침ados todav칤a. 游꿛
  </div>
<% } %>

</body>
</html>
