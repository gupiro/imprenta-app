<% title = 'Editar Material'; %>
<%- include('../partials/header') %>

<main class="container py-4">
  <h1 class="mb-4">✏️ Editar Material</h1>

  <% if (error.length) { %>
    <div class="alert alert-danger"><%= error.join('<br>') %></div>
  <% } %>
  <% if (success.length) { %>
    <div class="alert alert-success"><%= success.join('<br>') %></div>
  <% } %>

  <form action="/materiales/editar/<%= material.id %>" method="POST" class="row g-3 needs-validation" novalidate>
    <div class="col-md-6">
      <label for="name" class="form-label">Nombre</label>
      <input
        type="text"
        id="name"
        name="name"
        class="form-control"
        value="<%= material.name %>"
        required
      >
      <div class="invalid-feedback">El nombre es obligatorio.</div>
    </div>
    <div class="col-md-6">
      <label for="price" class="form-label">Precio</label>
      <input
        type="number"
        id="price"
        name="price"
        step="0.01"
        class="form-control"
        value="<%= material.price %>"
        required
      >
      <div class="invalid-feedback">El precio es obligatorio.</div>
    </div>
    <div class="col-md-6">
      <label for="tipoUnidad" class="form-label">Unidad</label>
      <select id="tipoUnidad" name="tipoUnidad" class="form-select">
        <option value="unidad" <%= material.tipoUnidad==='unidad' ? 'selected' : '' %>>Unidad</option>
        <option value="m2"      <%= material.tipoUnidad==='m2'      ? 'selected' : '' %>>Metro²</option>
      </select>
    </div>

    <div class="col-12 text-center mt-4">
      <button type="submit" class="btn btn-warning px-5">Guardar Cambios</button>
      <a href="/materiales" class="btn btn-secondary px-4">Cancelar</a>
    </div>
  </form>
</main>

<%- include('../partials/footer') %>

<script>
  // Validación de Bootstrap (opcional)
  (() => {
    'use strict';
    document.querySelectorAll('.needs-validation')
      .forEach(form => form.addEventListener('submit', e => {
        if (!form.checkValidity()) {
          e.preventDefault();
          e.stopPropagation();
        }
        form.classList.add('was-validated');
      }));
  })();
</script>
