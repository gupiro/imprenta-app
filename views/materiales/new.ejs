<%
// Si viene un objeto `material` estamos en edición,
// si no, en creación:
title = material ? 'Editar Material' : 'Agregar Material';
%>
<%- include('../partials/header') %>

<main class="container py-4">
  <h1 class="mb-4">
    <%= material ? '✏️ Editar Material' : '➕ Agregar Material' %>
  </h1>

  <% if (error.length) { %>
    <div class="alert alert-danger"><%= error.join('<br>') %></div>
  <% } %>
  <% if (success.length) { %>
    <div class="alert alert-success"><%= success.join('<br>') %></div>
  <% } %>

  <form
    action="<%= material ? '/materiales/editar/' + material.id : '/materiales' %>"
    method="POST"
    class="row g-3 needs-validation"
    novalidate
  >
    <div class="col-md-6">
      <label for="name" class="form-label">Nombre</label>
      <input
        type="text"
        id="name"
        name="name"
        class="form-control"
        required
        value="<%= material ? material.name : '' %>"
      >
      <div class="invalid-feedback">El nombre es obligatorio.</div>
    </div>

    <div class="col-md-6">
      <label for="price" class="form-label">Precio</label>
      <input
        type="number"
        id="price"
        name="price"
        class="form-control"
        step="0.01"
        required
        value="<%= material ? material.price : '' %>"
      >
      <div class="invalid-feedback">El precio es obligatorio.</div>
    </div>

    <div class="col-md-6">
      <label for="tipoUnidad" class="form-label">Unidad</label>
      <select id="tipoUnidad" name="tipoUnidad" class="form-select" required>
        <option value="unidad"
          <%= material && material.tipoUnidad === 'unidad' ? 'selected' : '' %>
        >Unidad</option>
        <option value="m2"
          <%= material && material.tipoUnidad === 'm2' ? 'selected' : '' %>
        >Metro²</option>
      </select>
      <div class="invalid-feedback">La unidad es obligatoria.</div>
    </div>

    <div class="col-12 text-center mt-4">
      <button type="submit" class="btn btn-success px-5">
        <%= material ? 'Actualizar' : 'Crear' %>
      </button>
      <a href="/materiales" class="btn btn-secondary px-4">Cancelar</a>
    </div>
  </form>
</main>

<%- include('../partials/footer') %>

<script>
// Bootstrap validation
(() => {
  'use strict';
  document.querySelectorAll('.needs-validation')
    .forEach(form => form.addEventListener('submit', e => {
      if (!form.checkValidity()) {
        e.preventDefault();
        e.stopPropagation();
      }
      form.classList.add('was-validated');
    }));
})();
</script>
