<%- include('../partials/header', { title: '游꿛 Pedidos Dise침ados' }) %>

<main class="container py-5">
  <h1 class="mb-4 text-center">游꿛 Pedidos Dise침ados</h1>

  <% if (pedidos.length > 0) { %>
    <div class="row g-4">
      <% pedidos.forEach(pedido => { %>
        <div class="col-md-4">
          <div class="pedido-card">

            <div class="pedido-img-container position-relative">
              <% if (pedido.imagen) { %>
                <a href="/uploads/<%= encodeURIComponent(pedido.imagen) %>" download>
                  <img
                    src="/uploads/thumbs/<%= encodeURIComponent(pedido.imagen) %>"
                    alt="Imagen Pedido"
                    class="img-fluid"
                    style="max-height:250px; object-fit:contain;"
                    loading="lazy"
                  >
                </a>
                <img
                  src="/uploads/tu_logo.png"
                  alt="Marca de Agua"
                  class="marca-agua-logo"
                >
              <% } else { %>
                <img
                  src="/uploads/default.png"
                  alt="Sin Imagen"
                  class="img-fluid"
                  style="max-height:250px; object-fit:contain;"
                  loading="lazy"
                >
              <% } %>
            </div>

            <div class="mt-3 d-grid gap-2">
              <% if (pedido.imagen) { %>
                <a
                  href="/uploads/<%= encodeURIComponent(pedido.imagen) %>"
                  download
                  class="btn btn-outline-success"
                >拘勇 Descargar Boceto</a>
              <% } %>

              <% if (pedido.archivo_final) { %>
                <a
                  href="/uploads/<%= encodeURIComponent(pedido.archivo_final) %>"
                  download
                  class="btn btn-outline-primary"
                >拘勇 Descargar Dise침o Final</a>
              <% } %>
            </div>

            <h5 class="mt-3"><strong>Cliente:</strong> <%= pedido.cliente_nombre %></h5>
            <p><strong>Descripci칩n:</strong> <%= pedido.descripcion %></p>
            <p><strong>Precio:</strong> $<%= pedido.precio ? Math.round(pedido.precio) : 0 %></p>
            <p><strong>Fecha:</strong> <%= pedido.fecha %></p>

            <div class="d-grid gap-2 mt-3">
              <form action="/pedidos/<%= pedido.id %>/cambiar-estado" method="POST">
                <select name="estado" class="form-select" required>
                  <option value="" disabled selected>Cambiar estado</option>
                  <option value="LISTO PARA IMPRIMIR">Listo para Imprimir</option>
                </select>
                <button type="submit" class="btn btn-success">Actualizar Estado</button>
              </form>

              <form
                action="/pedidos/<%= pedido.id %>/subir-final"
                method="POST"
                enctype="multipart/form-data"
              >
                <label class="form-label">Subir Dise침o Final:</label>
                <input
                  type="file"
                  name="archivo_final"
                  class="form-control mb-2"
                  required
                >
                <button type="submit" class="btn btn-primary">游닋 Subir Dise침o Final</button>
              </form>
            </div>
            
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <div class="alert alert-info text-center">
      No hay pedidos dise침ados todav칤a. 游꿛
    </div>
  <% } %>
</main>

<%- include('../partials/footer') %>
