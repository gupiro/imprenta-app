<%- include('../partials/header') %>

<main class="container py-4">
  <h1 class="mb-4">üñ®Ô∏è <%= title %></h1>

  <% if (error.length) { %>
    <div class="alert alert-danger"><%= error %></div>
  <% } %>
  <% if (success.length) { %>
    <div class="alert alert-success"><%= success %></div>
  <% } %>

  <% if (pedidos.length) { %>
    <% pedidos.forEach(p => { %>
      <div class="card mb-4">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-start">
            <div>
              <h5 class="card-title">Pedido #<%= p.id %> ‚Äì <%= p.cliente_nombre %></h5>
              <p class="mb-1"><strong>Fecha:</strong> <%= p.fecha %></p>
              <p class="mb-1"><strong>Monto:</strong> $<%= p.precio %></p>

              <% if (p.productos && p.productos.length) { %>
                <h6 class="mt-3">üì¶ Productos:</h6>
                <ul class="mb-3">
                  <% p.productos.forEach(prod => { %>
                    <li>
                      <strong>Material:</strong> <%= prod.material %>
                      &nbsp;|&nbsp;
                      <strong>Medidas:</strong> <%= prod.ancho %> m √ó <%= prod.alto %> m
                    </li>
                  <% }) %>
                </ul>
              <% } %>
            </div>
            <form action="/pedidos/terminar/<%= p.id %>" method="POST">
              <button class="btn btn-success btn-sm">Marcar como Terminado</button>
            </form>
          </div>

          <h6>üìÇ Archivos de Dise√±o Final:</h6>
          <div class="row g-3">
            <% p.archivos.forEach(fn => {
                 const ext     = fn.split('.').pop().toLowerCase();
                 const isImage = ['jpg','jpeg','png','gif'].includes(ext);
            %>
              <div class="col-md-3">
                <div class="card h-100">
                  <div class="card-body text-center p-2">
                    <% if (isImage) { %>
                      <a href="/uploads/<%= encodeURIComponent(fn) %>" download>
                        <img
                          src="/uploads/thumbs/<%= encodeURIComponent(fn) %>"
                          class="img-fluid mb-1"
                          style="max-height:100px;"
                          loading="lazy"
                        >
                      </a>
                    <% } else { %>
                      <i class="bi bi-file-earmark-text" style="font-size:2rem;"></i>
                    <% } %>
                    <p class="small text-truncate"><%= fn %></p>
                  </div>
                  <div class="card-footer bg-transparent d-flex justify-content-between p-2">
                    <a
                      href="/uploads/<%= encodeURIComponent(fn) %>"
                      download
                      class="btn btn-outline-primary btn-sm"
                    >
                      Descargar
                    </a>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        </div>
      </div>
    <% }) %>
  <% } else { %>
    <p>No hay pedidos listos para impresi√≥n.</p>
  <% } %>

  <div class="mt-4">
    <a href="/pedidos/pendientes" class="btn btn-secondary">‚Üê Volver a Pendientes</a>
  </div>
</main>

<%- include('../partials/footer') %>
