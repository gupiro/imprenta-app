<%- include('../partials/header', { title: 'Pedidos Impresos' }) %>

<main class="container py-5">
  <h1 class="text-center mb-5">üñ®Ô∏è Pedidos Impresos</h1>

  <% if (pedidos.length > 0) { %>
    <div class="table-responsive">
      <table class="table table-bordered table-hover align-middle text-center">
        <thead class="table-dark">
          <tr>
            <th>Cliente</th>
            <th>Material</th>
            <th>Descripci√≥n</th>
            <th>Precio Total</th>
            <th>Se√±ado</th>
            <th>Saldo</th>
            <th>Pago</th>
            <th>Medio de Pago</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% pedidos.forEach(pedido => { %>
            <tr>
              <td><%= pedido.cliente_nombre %></td>
              <td><%= pedido.material %></td>
              <td><%= pedido.descripcion %></td>
              <td>$<%= pedido.precio ? Math.round(pedido.precio) : 0 %></td>
              <td>$<%= pedido.monto_entregado ? Math.round(pedido.monto_entregado) : 0 %></td>
              <td>$<%= pedido.monto_restante ? Math.round(pedido.monto_restante) : 0 %></td>
              <td>
                <% if (pedido.monto_entregado === 0) { %>
                  <span class="badge bg-danger">No Pag√≥</span>
                <% } else if (pedido.monto_restante > 0) { %>
                  <span class="badge bg-warning text-dark">Pago Parcial</span>
                <% } else { %>
                  <span class="badge bg-success">Pagado</span>
                <% } %>
              </td>
              <td><%= pedido.medio_pago || 'Efectivo' %></td>
              <td>
                <% if (pedido.monto_restante > 0) { %>
                  <form action="/pedidos/<%= pedido.id %>/pagar-saldo" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-success btn-sm">üí∞ Pagar saldo</button>
                  </form>
                <% } else { %>
                  <span class="text-success fs-4">‚úÖ</span>
                <% } %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% } else { %>
    <div class="alert alert-warning text-center" role="alert">
      No hay pedidos impresos actualmente. üñ®Ô∏è
    </div>
  <% } %>

  <div class="text-center mt-4">
    <a href="/" class="btn btn-secondary">‚Üê Volver al Inicio</a>
  </div>
</main>

<%- include('../partials/footer') %>
