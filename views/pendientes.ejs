<%- include('partials/header') %>

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Pedidos Pendientes</title>
  <link rel="stylesheet" href="/css/estilos.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .pedido-card {
      background: #f9f9f9;
      border: 1px solid #ddd;
      border-radius: 10px;
      padding: 15px;
      margin: 15px 0;
      box-shadow: 0px 2px 8px rgba(0,0,0,0.1);
      transition: transform 0.2s;
    }
    .pedido-card:hover {
      transform: scale(1.02);
    }
    .pedido-img {
      width: 100%;
      max-height: 200px;
      object-fit: contain;
      margin-bottom: 10px;
    }
    .acciones-btns {
      display: flex;
      flex-direction: column;
      gap: 10px;
      margin-top: 10px;
    }
  </style>
</head>

<body class="container py-5">

  <h1 class="mb-4 text-center">ğŸ“¥ Pedidos Pendientes</h1>

  <% if (pedidos.length > 0) { %>
    <div class="row">
      <% pedidos.forEach(pedido => { %>
        <div class="col-md-4">
          <div class="pedido-card">

            <% if (pedido.imagen) { %>
              <!-- Carga perezosa y baja calidad con query param -->
              <img
                src="/uploads/<%= pedido.imagen %>?quality=low"
                loading="lazy"
                alt="Imagen Pedido"
                class="pedido-img"
              >
            <% } else { %>
              <img
                src="/uploads/default.png"
                loading="lazy"
                alt="Sin imagen"
                class="pedido-img"
              >
            <% } %>

            <h5><strong>Cliente:</strong> <%= pedido.cliente_nombre %></h5>
            <p><strong>Precio Total:</strong> $<%= pedido.precio ? Math.round(pedido.precio) : 0 %></p>
            <p><strong>Saldo Pendiente:</strong> $<%= pedido.monto_restante ? Math.round(pedido.monto_restante) : 0 %></p>
            <p><strong>Fecha:</strong> <%= pedido.fecha %></p>

            <div class="acciones-btns">

              <% if (pedido.imagen) { %>
                <!-- Enlace de descarga a alta calidad -->
                <a
                  href="/uploads/<%= pedido.imagen %>"
                  download
                  class="btn btn-outline-primary w-100"
                >
                  ğŸ“¥ Descargar Imagen
                </a>
              <% } %>

              <!-- Subir nueva imagen -->
              <form action="/pedidos/<%= pedido.id %>/actualizar-imagen" method="POST" enctype="multipart/form-data" class="d-grid gap-2">
                <input type="file" name="nuevaImagen" class="form-control mb-2" required>
                <button type="submit" class="btn btn-warning">â¬†ï¸ Subir Nueva Imagen y Pasar a RevisiÃ³n</button>
              </form>

              <!-- Cambiar estado manual -->
              <form action="/pedidos/<%= pedido.id %>/cambiar-estado" method="POST" class="d-grid gap-2">
                <select name="estado" class="form-select" required>
                  <option value="" disabled selected>Actualizar Estado</option>
                  <option value="EN REVISION">Pasar a RevisiÃ³n</option>
                  <option value="LISTO PARA IMPRIMIR">Listo para Imprimir</option>
                  <option value="IMPRESO">Impreso</option>
                  <option value="TERMINADO PARA ENTREGA">Terminado para Entrega</option>
                  <option value="ENTREGADO">Entregado</option>
                </select>
                <button type="submit" class="btn btn-success">âœ… Actualizar Estado</button>
              </form>

              <!-- Eliminar pedido -->
              <form action="/pedidos/<%= pedido.id %>/eliminar" method="POST" onsubmit="return confirm('Â¿Seguro que querÃ©s eliminar este pedido? ğŸ˜¨')">
                <button type="submit" class="btn btn-outline-danger w-100">ğŸ—‘ï¸ Eliminar Pedido</button>
              </form>

            </div>

          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <div class="alert alert-warning text-center">
      No hay pedidos pendientes todavÃ­a. ğŸ˜
    </div>
  <% } %>

</body>
</html>
