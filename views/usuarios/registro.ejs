<%- include('../partials/header') %>

<div class="container">
  <h1 class="mb-4 text-center">🧑‍💻 Crear Usuario</h1>

  <form action="/usuarios/registro" method="POST" class="mx-auto" style="max-width: 400px;">
    <div class="mb-3">
      <label class="form-label">Nombre de usuario</label>
      <input type="text" name="username" class="form-control" required>
    </div>

    <div class="mb-3">
      <label class="form-label">Contraseña</label>
      <input type="password" name="password" class="form-control" required>
    </div>

    <div class="mb-3">
      <label class="form-label">Rol</label>
      <select name="rol" class="form-select" required>
        <option value="atencion">Atención</option>
        <option value="impresor">Impresor</option>
        <option value="admin">Administrador</option>
      </select>
    </div>

    <button class="btn btn-primary w-100">✅ Crear Usuario</button>
  </form>
</div>

<%- include('../partials/footer') %>
